<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.uni_freiburg.es.sensorrecordingtool">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature
        android:name="android.hardware.type.watch"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <service android:name=".Recorder">
            <intent-filter>
                <action android:name="de.uni_freiburg.es.sensorrecordingtool.Recorder.RECORD_ACTION"/>
                <action android:name="de.uni_freiburg.es.sensorrecordingtool.WearForwarder.RECORD_ACTION_FORWARDED"/>
            </intent-filter>
        </service>

        <service android:name=".WearForwarder">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <action android:name="de.uni_freiburg.es.sensorrecordingtool.Recorder.RECORD_ACTION"/>
            </intent-filter>
        </service>
    </application>

</manifest>
